<div>
    <div class="search-container">
        <h4>Search for hotels</h4>
        <Input  @value={{this.query}}/>
    </div>
    <ul class="property-list">
    <Rental::Filter @rentals={{@rentals}} @query={{this.query}} as |results|>
        {{#each results as |rental|}}
        <li>
            <Rental @rental={{rental}}/>
        </li>
        {{/each}}
    </Rental::Filter>
</ul>
</div>
